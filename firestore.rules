rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // A user can create their own document when signing up.
      allow create: if request.auth.uid == userId;

      // A user can read their own profile.
      // A teacher can read the profiles of their own students.
      allow read: if request.auth.uid == userId ||
                   (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' &&
                    resource.data.teacherId == request.auth.uid);

      // A user can update their own profile with restricted fields.
      allow update: if isSignedIn() &&
                    isOwner(userId) &&
                    // Ensure sensitive fields are not changed
                    request.resource.data.uid == resource.data.uid &&
                    request.resource.data.role == resource.data.role &&
                    request.resource.data.email == resource.data.email &&
                    // Allow only expected fields
                    request.resource.data.keys().hasAll(['uid', 'role', 'name', 'email', 'school', 'language', 'teacherCode']) &&
                    request.resource.data.keys().hasOnly(['uid', 'role', 'name', 'email', 'school', 'language', 'teacherCode']);

      // Any authenticated user can attempt to list users.
      // This enables teacher queries, secured by the read rule.
      allow list: if request.auth != null;

      // Client-side deletes are disabled.
      allow delete: if false;
    }

    match /teacherCodes/{code} {
      // Allow a teacher to create their unique code during signup.
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      
      // Allow the associated teacher to update their teacher code if needed.
      allow update: if isSignedIn() && resource.data.teacherId == request.auth.uid;

      // No one else can read, update, or delete.
      allow read, delete: if false;
    }

    match /content/{contentId} {
      // Only teachers can create content.
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';

      // The authoring teacher can do anything. An assigned student can only read.
      allow read: if resource.data.teacherId == request.auth.uid || (request.auth.uid in resource.data.assignedStudentIds);
      allow update, delete: if resource.data.teacherId == request.auth.uid;

      // Teachers can list their own content. The query must be filtered by teacherId.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    match /assignments/{assignmentId} {
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      // Student can read their own assignment, Teacher can read assignments they created.
      allow read: if resource.data.studentId == request.auth.uid || resource.data.teacherId == request.auth.uid;
      // Authenticated users can list, but will only get results they have read access to.
      allow list: if request.auth != null;
    }

    match /assessments/{assessmentId} {
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      // Teacher can read their own assessment, or an assigned student can read it.
      allow read: if resource.data.teacherId == request.auth.uid || (request.auth.uid in resource.data.assignedStudentIds);
      // Authenticated users can list, but will only get results they have read access to.
      allow list: if request.auth != null;
    }

    match /submissions/{submissionId} {
      allow create: if request.resource.data.studentId == request.auth.uid;
      // Teacher or the student who submitted can read/update.
      allow read, update: if resource.data.teacherId == request.auth.uid || resource.data.studentId == request.auth.uid;
      // Only teachers can list submissions.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    match /game_sessions/{sessionId} {
      allow create: if request.resource.data.studentId == request.auth.uid;
      allow read: if resource.data.studentId == request.auth.uid;
    }
  }
}
