
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isTeacher() {
      return isRole('teacher');
    }
    
    function isStudent() {
      return isRole('student');
    }

    match /users/{userId} {
      // CREATE:
      // - Anyone can create a user document (for signup).
      // - The document ID must match the creator's UID.
      // - Data must be valid for the specified role.
      allow create: if isSignedIn()
                      && isOwner(userId)
                      && request.resource.data.role in ['teacher', 'student']
                      && request.resource.data.name is string
                      && request.resource.data.school is string
                      && request.resource.data.language is string
                      && (
                        (request.resource.data.role == 'teacher' && request.resource.data.teacherCode is string && request.resource.data.teacherCode.size() == 6) ||
                        (request.resource.data.role == 'student' && request.resource.data.teacherId is string && request.resource.data.grade is string)
                      );
                      
      // READ: 
      // - Users can read their own profile.
      // - Students can read their assigned teacher's profile.
      allow read: if isSignedIn() && (isOwner(userId) || (isStudent() && resource.data.role == 'teacher' && resource.id == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teacherId));

      // UPDATE:
      // - Users can update their own profile.
      // - Cannot change role or teacher code after creation.
      allow update: if isSignedIn() 
                    && isOwner(userId)
                    && request.resource.data.role == resource.data.role
                    && request.resource.data.teacherCode == resource.data.teacherCode;
                    
      // DELETE: No one can delete user profiles.
      allow delete: if false;
    }

    match /teacherCodes/{code} {
      // CREATE: A user can create a teacher code document if:
      // - They are creating it for themselves (teacherId matches their UID).
      // - This is part of the teacher signup transaction.
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      
      // READ: Anyone can read a teacher code document to validate it.
      allow read: if true;

      // UPDATE/DELETE: Not allowed.
      allow update, delete: if false;
    }
    
    match /content/{contentId} {
        // Teachers can create content.
        allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
        
        // Teachers can read their own content.
        // Students can read content if their ID is in the 'assignedStudentIds' array.
        allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                      (isStudent() && request.auth.uid in resource.data.assignedStudentIds);

        // Teachers can update/delete their own content.
        allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /assignments/{assignmentId} {
      // Assignments are created by the system/teacher logic, read by assigned students.
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) || 
                    (isStudent() && resource.data.studentId == request.auth.uid);
      allow delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /assessments/{assessmentId} {
        // Teachers can create assessments.
        allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
        // Teachers can read their own assessments.
        // Students can read assessments assigned to them.
        allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                      (isStudent() && request.auth.uid in resource.data.assignedStudentIds);
        allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }
    
    match /submissions/{submissionId} {
        // Students can create submissions.
        allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
        // Teachers can read submissions for their students.
        // Students can read their own submissions.
        allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                      (isStudent() && resource.data.studentId == request.auth.uid);
        // Teachers can update submissions with feedback.
        allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }
  }
}
