rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // UTILITY FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isRole(role) {
      return isSignedIn() && getUserData(request.auth.uid).role == role;
    }

    function isMyTeacher(studentId) {
      return isOwner(getUserData(studentId).teacherId);
    }

    function isMyStudent(teacherId) {
      return getUserData(request.auth.uid).teacherId == teacherId && isRole('student');
    }

    function isMe(studentId) {
      return isOwner(studentId) && isRole('student');
    }

    // TEACHER CODES
    match /teacherCodes/{code} {
      allow create: if isSignedIn() &&
                    request.resource.data.teacherId == request.auth.uid;
      allow read, update, delete: if false;
    }

    // USERS
    match /users/{userId} {
      allow create: if isSignedIn() &&
                    isOwner(userId) &&
                    (
                      (request.resource.data.role == 'teacher' &&
                       request.resource.data.teacherCode is string &&
                       request.resource.data.teacherCode.size() == 6)
                      ||
                      (request.resource.data.role == 'student' &&
                       request.resource.data.teacherId is string)
                    ) &&
                    request.resource.data.name is string &&
                    request.resource.data.email is string;

      allow read: if isSignedIn() &&
                    (
                      isOwner(userId) ||
                      (isRole('student') && getUserData(request.auth.uid).teacherId == userId) ||
                      (isRole('teacher') && getUserData(userId).teacherId == request.auth.uid)
                    );

      allow update: if isSignedIn() &&
                      isOwner(userId) &&
                      request.resource.data.uid == resource.data.uid &&
                      request.resource.data.role == resource.data.role &&
                      request.resource.data.email == resource.data.email;

      allow delete: if false;
    }

    // CONTENT
    match /content/{contentId} {
      allow create: if isRole('teacher') &&
                     isOwner(request.resource.data.teacherId);

      allow read: if (isRole('teacher') &&
                      isOwner(get(/databases/$(database)/documents/content/$(contentId)).data.teacherId)) ||
                    (isRole('student') &&
                      get(/databases/$(database)/documents/content/$(contentId)).data.assignedStudentIds.hasAny([request.auth.uid]));

      allow update, delete: if isRole('teacher') &&
                              isOwner(get(/databases/$(database)/documents/content/$(contentId)).data.teacherId);
    }

    // ASSIGNMENTS
    match /assignments/{assignmentId} {
      allow create: if isRole('teacher') &&
                     isMyStudent(request.resource.data.teacherId);

      allow read: if (isRole('student') &&
                      isOwner(get(/databases/$(database)/documents/assignments/$(assignmentId)).data.studentId)) ||
                    (isRole('teacher') &&
                      isOwner(get(/databases/$(database)/documents/assignments/$(assignmentId)).data.teacherId));

      allow update, delete: if false;
    }

    // ASSESSMENTS
    match /assessments/{assessmentId} {
      allow create: if isRole('teacher') &&
                     isOwner(request.resource.data.teacherId);

      allow read: if (isRole('student') &&
                      get(/databases/$(database)/documents/assessments/$(assessmentId)).data.assignedStudentIds.hasAny([request.auth.uid])) ||
                    (isRole('teacher') &&
                      isOwner(get(/databases/$(database)/documents/assessments/$(assessmentId)).data.teacherId));

      allow update, delete: if false;
    }

    // SUBMISSIONS
    match /submissions/{submissionId} {
      allow create: if isRole('student') &&
                     isOwner(request.resource.data.studentId);

      allow read: if (isRole('student') &&
                      isOwner(get(/databases/$(database)/documents/submissions/$(submissionId)).data.studentId)) ||
                    (isRole('teacher') &&
                      isOwner(get(/databases/$(database)/documents/submissions/$(submissionId)).data.teacherId));

      allow update: if isRole('teacher') &&
                     isOwner(get(/databases/$(database)/documents/submissions/$(submissionId)).data.teacherId);

      allow delete: if false;
    }

    // GAME SESSIONS
    match /game_sessions/{sessionId} {
      allow create: if isRole('student') &&
                     isOwner(request.resource.data.studentId);

      allow read: if (isRole('student') &&
                      isOwner(get(/databases/$(database)/documents/game_sessions/$(sessionId)).data.studentId)) ||
                    (isRole('teacher') &&
                      isOwner(get(/databases/$(database)/documents/game_sessions/$(sessionId)).data.teacherId));

      allow update, delete: if false;
    }
  }
}
