rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection:
    // Allows anyone to read user data (needed to check teacher codes on signup).
    // Restricts creating, updating, or deleting to the authenticated user for their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Assessments Collection:
    // Teachers can create assessments.
    // The creating teacher and assigned students can read them.
    // Only the creating teacher can update or delete.
    match /assessments/{assessmentId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.teacherId == request.auth.uid || request.auth.uid in resource.data.assignedStudentIds);
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }

    // Submissions Collection:
    // Students can create submissions.
    // The student who submitted and their teacher can read/update.
    // Deleting is disallowed.
    match /submissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read, update: if request.auth != null && (resource.data.studentId == request.auth.uid || resource.data.teacherId == request.auth.uid);
      allow delete: if false;
    }
  }
}
