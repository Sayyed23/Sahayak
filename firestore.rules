
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function userExists(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function getRequestingUserRole() {
      // Safely get the role of the user making the request.
      return userExists(request.auth.uid) ? getUserData(request.auth.uid).role : null;
    }

    function isTeacher() {
      return isSignedIn() && getRequestingUserRole() == 'teacher';
    }

    function isStudent() {
      return isSignedIn() && getRequestingUserRole() == 'student';
    }


    // --- Collection Rules ---

    // Teacher codes are used by students to sign up.
    match /teacherCodes/{code} {
      // Authenticated users can read codes to validate them during student signup.
      allow read: if isSignedIn();
      // A teacher can create their own code when they sign up.
      // The new document must contain their own UID.
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      // No one can update or delete codes.
      allow update, delete: if false;
    }

    // User profile documents.
    match /users/{userId} {
      // Allow user creation if the user is signing up and has a valid role.
      allow create: if isOwner(userId) && request.resource.data.role in ['teacher', 'student'];

      // Users can read their own profile.
      // Students can read their teacher's profile.
      // Teachers can read their students' profiles.
      allow read: if isSignedIn() && (
                    isOwner(userId) ||
                    (isStudent() && getUserData(request.auth.uid).teacherId == userId) ||
                    (isTeacher() && getUserData(userId).teacherId == request.auth.uid)
                  );
      
      // Users can update their own profile, but cannot change their role, uid, or teacher code.
      allow update: if isOwner(userId) 
                    && request.resource.data.role == resource.data.role
                    && request.resource.data.uid == resource.data.uid
                    && request.resource.data.teacherCode == resource.data.teacherCode;
      
      allow delete: if false;
    }

    // Content created by teachers (stories, worksheets, etc.).
    match /content/{contentId} {
      // Only teachers can create, update, or delete their own content.
      allow create, update, delete: if isTeacher() && request.resource.data.teacherId == request.auth.uid;

      // Teachers can read their own content.
      // Students can read content if their ID is in the `assignedStudentIds` array.
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isStudent() && request.auth.uid in resource.data.assignedStudentIds);
    }
    
    // Assignments link content to students.
    match /assignments/{assignmentId} {
        // Teachers create assignments for their students.
        allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
        
        // Teachers can read assignments they created.
        // Students can read assignments given to them.
        allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                     (isStudent() && resource.data.studentId == request.auth.uid);
                     
        allow update, delete: if false;
    }
    
    // Assessments are reading passages assigned by teachers.
    match /assessments/{assessmentId} {
      // Only teachers can create, update, or delete their own assessments.
      allow create, update, delete: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      
      // Teachers can read their own assessments.
      // Students can read assessments assigned to them via the `assignedStudentIds` array.
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isStudent() && request.auth.uid in resource.data.assignedStudentIds);
    }

    // Submissions are student responses to assignments/assessments.
    match /submissions/{submissionId} {
      // Students can create their own submissions.
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      
      // Teachers can read submissions from their students.
      // Students can read their own submissions.
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isStudent() && resource.data.studentId == request.auth.uid);
                   
      // Only teachers can update submissions (e.g., with feedback).
      allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      allow delete: if false;
    }
    
     // Game sessions track student performance in games.
    match /game_sessions/{sessionId} {
      // Students can create their own game sessions.
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      
      // Teachers can read their students' game sessions.
      // Students can read their own game sessions.
      allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isStudent() && resource.data.studentId == request.auth.uid);

      allow update, delete: if false;
    }
  }
}
