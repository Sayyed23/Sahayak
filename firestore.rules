rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User documents. Public read is needed for student sign-up to validate teacher codes.
    // Writes are restricted to the owner of the document.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Assessments can be managed by teachers. All authenticated users can read them.
    match /assessments/{assessmentId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Students can create submissions. Teachers can read and update them. The student who made it can also read it.
    match /submissions/{submissionId} {
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
      allow read, update: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' || request.auth.uid == resource.data.studentId);
      // Only teachers can delete submissions
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
  }
}
