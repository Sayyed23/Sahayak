rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule is critical for student sign-up.
    // It allows an unauthenticated user to query the 'users' collection
    // to validate a teacher's code. Write access is still restricted.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for other collections, requiring authentication.
    match /assessments/{assessmentId} {
      allow read, write: if request.auth != null;
    }
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null;
    }
  }
}
