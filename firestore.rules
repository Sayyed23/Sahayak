
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow list: if true;
      allow get: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher');
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /assessments/{assessmentId} {
        allow create, update: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
        
        // Allow authenticated users to query for assessments.
        // The client query MUST enforce security (e.g., where("assignedStudentIds", "array-contains", user.uid))
        // This is required for array-contains queries to work with security rules.
        allow read: if request.auth.uid != null;
    }

    match /submissions/{submissionId} {
        allow create: if request.auth.uid != null && get(/databases/$(database)/documents/assessments/$(request.resource.data.assessmentId)).data.assignedStudentIds.hasAny([request.auth.uid]);
        
        allow read, update: if request.auth.uid != null && (
            (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' && resource.data.teacherId == request.auth.uid) || 
            (resource.data.studentId == request.auth.uid)
        );
    }
  }
}
