
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow anyone to read user documents. This is necessary for
      // unauthenticated students to find a teacher by their code during sign-up.
      // In a production environment, you should restrict this to only return
      // non-sensitive fields.
      allow read: if true;
      
      // Allow a user to create and update their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'assessments' collection
    match /assessments/{assessmentId} {
      // Only authenticated users can read or write assessments.
      allow read, write: if request.auth != null;
    }

    // Rules for the 'submissions' collection
    match /submissions/{submissionId} {
      // Only authenticated users can read or write submissions.
      allow read, write: if request.auth != null;
    }
  }
}
