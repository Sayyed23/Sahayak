rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to query user data (for teacher code lookup),
    // but a user can only create, update, or delete their own document.
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }

    // Assessments can be read by the teacher who created them or assigned students.
    // Only the teacher can create, update, or delete them.
    match /assessments/{assessmentId} {
      allow read: if request.auth != null && (resource.data.teacherId == request.auth.uid || request.auth.uid in resource.data.assignedStudentIds);
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.teacherId;
    }

    // Submissions can be read by the student who submitted it or the teacher.
    // Only the student can create a submission.
    // Only the teacher can update it (e.g., with feedback).
    match /submissions/{submissionId} {
      allow read: if request.auth != null && (resource.data.studentId == request.auth.uid || resource.data.teacherId == request.auth.uid);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth != null && request.auth.uid == resource.data.teacherId;
      allow delete: if false; // Disallow deleting submissions for now.
    }
  }
}
