rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can create their own account and write to their own document.
      allow write: if request.auth.uid == userId;

      // A user can read their own document.
      // A teacher can read any student document to see them in lists.
      allow read: if (request.auth.uid == userId) ||
                    (request.auth != null &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' &&
                     resource.data.role == 'student');
    }

    match /assessments/{assessmentId} {
      // A teacher can read/write any assessment.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      // A student can read an assessment they are assigned to.
      allow get: if request.auth != null && resource.data.assignedStudentIds.hasAny([request.auth.uid]);
    }

    match /submissions/{submissionId} {
      // A teacher can read/write any submission.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      // A student can create their own submission.
      allow create: if request.auth.uid == request.resource.data.studentId;
      // A student can read their own submission.
      allow get: if request.auth.uid == resource.data.studentId;
    }
  }
}
